<!doctype html>
<!-- {{ pkg.name }} v{{ pkg.version }} | {% if pkg.private %}All rights reserved{% else %}{{ pkg.license }}{% endif %} | {{ pkg.author | safe }} -->
<html lang="{{ locale }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>{% if title %}{{ title }} | {% endif %}{{ site.locales[locale].title }}</title>

  <link rel="icon" href="/static/images/icon-32x32.png" sizes="32x32">
  <link rel="apple-touch-icon-precomposed" href="/static/images/icon-256x256.png">

  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fork-awesome@1.1.7/css/fork-awesome.min.css" integrity="sha256-gsmEoJAws/Kd3CjuOQzLie5Q3yshhvmo7YNtBG7aaEY=" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/styles.min.css">
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">

  <nav id="header" class="bg-white fixed w-full z-10 top-0 shadow">
    <div class="container w-full mx-auto px-2 flex flex-wrap items-center py-2 lg:pb-0">
      <div class="w-4/5">
        <a class="text-gray-900 text-base xl:text-xl no-underline hover:no-underline font-bold xpl-4" href="#">
          <i class="fa fa-graduation-cap fa-lg text-teal-600 pr-3"></i>{{ site.locales[locale].title }}
        </a>
      </div>
      <div class="w-1/5">
        <div class="flex relative inline-block float-right">
          <div class="block lg:hidden pr-4">
            <button id="nav-toggle" class="flex items-center px-3 py-2 border rounded text-gray-500 border-gray-600 hover:text-gray-900 hover:border-teal-500 appearance-none focus:outline-none">
              <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" /></svg>
            </button>
          </div>
        </div>
      </div>
      <div class="w-full flex-grow lg:flex lg:items-center lg:w-auto hidden lg:block mt-2 lg:mt-0 bg-white z-20" id="nav-content">
        <ul class="list-reset lg:flex flex-1 items-center px-4 md:px-0">
{% set home = collections.all | one('/') %}
          <li class="mx-4 my-2 md:my-0">
            <a href="{{ home.url }}" class="block py-1 md:py-3 px-1 align-middle text-teal-600 no-underline hover:text-gray-900 border-b-2 border-teal-600 hover:border-purple-600">
              <i class="fa fa-{{ home.data.menu.icon }} fa-fw mr-2 text-teal-600"></i>&nbsp;<span class="pb-1 md:pb-0 text-sm">{{ home.data.menu.title or home.data.title }}</span>
            </a>
          </li>
{%- for item in collections.all | branches(home) | reverse %}
          <li class="mx-4 my-2 md:my-0">
            <a href="{{ item.url }}" class="block py-1 md:py-3 px-1 align-middle text-teal-600 no-underline hover:text-gray-900 border-b-2 border-teal-600 hover:border-purple-600">
              <i class="fa fa-{{ item.data.menu.icon }} fa-fw mr-2 text-teal-600"></i>&nbsp;<span class="pb-1 md:pb-0 text-sm">{{ item.data.menu.title or item.data.title }}</span>
            </a>
          </li>
{%- endfor %}
          </ul>
        </div>
    </div>
  </nav>

  <div class="container w-full mx-auto px-2 pt-16 lg:pt-24">
    <div class="w-full mb-16 text-gray-800 leading-normal">
      <div class="flex flex-wrap -mx-2">
{% block body -%}{%- endblock %}
      </div>
    </div>
  </div>


  <footer class="bg-white border-t border-gray-400 shadow">
    <div class="container mx-auto flex py-4">
      <div class="w-full mx-auto flex flex-wrap">

        <div class="flex w-full md:w-3/4 ">
          <div class="px-8">
            <p class="text-gray-600 text-sm">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
          </div>
        </div>

        <div class="flex w-full md:w-1/4">
          <div class="px-8">
          </div>
        </div>

      </div>
    </div>
  </footer>

  <script>
  var navMenuDiv = document.getElementById("nav-content");
  var navMenu = document.getElementById("nav-toggle");

  document.onclick = check;

  function check(e) {
    var target = (e && e.target) || (event && event.srcElement);

    if (!checkParent(target, navMenuDiv)) {
      if (checkParent(target, navMenu)) {
        if (navMenuDiv.classList.contains("hidden")) {
          navMenuDiv.classList.remove("hidden");
        } else {
          navMenuDiv.classList.add("hidden");
        }
      } else {
        navMenuDiv.classList.add("hidden");
      }
    }
  }

  function checkParent(t, elm) {
    while (t.parentNode) {
      if (t == elm) return true;
      t = t.parentNode;
    }
    return false;
  }
  </script>
</body>
</html>
